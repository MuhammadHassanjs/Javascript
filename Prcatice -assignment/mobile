<script>
 const phones = [
    {
        brand: 'Samsung',
        model: 'S20',
        ram: 8,
        rom: 256,
        camera: '20 megapixel',
        price: 15000
    },
    {
        brand: 'Xiomi',
        model: 'note10',
        ram: 4,
        rom: 64,
        camera: '10 megapixel',
        price: 15000
    },
    {
        brand: 'Infinix',
        model: 'z10',
        ram: 2,
        rom: 16,
        camera: '5 megapixel',
        price: 15000
    },
    {
        brand: 'Tecno',
        model: 'spark10',
        ram: 12,
        rom: 512,
        camera: '25 megapixel',
        price: 15000
    },
    {
        brand: 'Iphone',
        model: '14',
        ram: 4,
        rom: 1024,
        camera: '30 megapixel',
        price: 15000
    },
    {
        brand: 'Oppo',
        model: 'F11',
        ram: 8,
        rom: 256,
        camera: '20 megapixel',
        price: 15000
    },
    {
        brand: 'Vivo',
        model: 'y20',
        ram: 4,
        rom: 64,
        camera: '8 megapixel',
        price: 15000
    },
    {
        brand: 'Abdullah',
        model: 's50',
        ram: 50,
        rom: 1024,
        camera: '60 megapixel',
        price: 300000
    },

    // Add other phone objects here...
  ];

  const phoneContainer = document.getElementById('phoneContainer');

  phones.forEach((phone, index) => {
    const phoneBox = document.createElement('div');
    phoneBox.classList.add('phone-box');
    phoneBox.innerHTML = `
      <div class="phone-info">${phone.brand} ${phone.model}</div>
      <div class="phone-info">RAM: ${phone.ram} GB</div>
      <div class="phone-info">ROM: ${phone.rom} GB</div>
      <div class="phone-info">Camera: ${phone.camera}</div>
      <div class="phone-price">$${phone.price}</div>
      <button class="add-to-cart-btn" onclick="addToCart(${index})">Add to Cart</button>
    `;
    phoneContainer.appendChild(phoneBox);
  });

  function addToCart(index) {
    const selectedPhone = phones[index];
    let cart = JSON.parse(localStorage.getItem('cart')) || [];
    let existingItem = cart.find(item => item.brand === selectedPhone.brand && item.model === selectedPhone.model);
    if (existingItem) {
      existingItem.quantity++;
    } else {
      selectedPhone.quantity = 1;
      cart.push(selectedPhone);
    }
    localStorage.setItem('cart', JSON.stringify(cart));
  }
</script>
